<h1>BIBLIO</h1>
<h3>The Books App</h3>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Subject</th>
    <th>ISBN</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.subject %></td>
    <td><%= book.isbn %></td>
    <td><%= book.cover %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

